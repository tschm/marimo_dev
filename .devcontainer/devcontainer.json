{
    "name": "Python Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "hostRequirements": {
        "cpus": 4
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install marimo && cat requirements.txt",
    "remoteUser": "vscode"
}

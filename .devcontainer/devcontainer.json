{
    "name": "Marimo Development Container",
    "dockerFile": "Dockerfile",
    "hostRequirements": {
        "cpus": 4
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },

    "remoteUser": "marimo",
    "updateRemoteUserUID": true,

    "forwardPorts": [8080],
    "postCreateCommand": "uv pip install -r requirements.txt --target /workspaces/.venv",
    "postStartCommand": "marimo --yes edit /workspaces/marimo_dev --host=localhost --port=8080 --headless --no-token",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/workspaces/.venv/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "marimo.port": 8080,
                "marimo.host": "localhost",
                "marimo.enableToken": false,
                "marimo.showTerminal": false,
                "marimo.debug": false,
                "marimo.pythonPath": "/workspaces/.venv/bin/python",
                "marimo.marimoPath": "/workspaces/.venv/bin/marimo"
            },
            "extensions": [
                "ms-python.python",
                "marimo-team.vscode-marimo"
            ]
        }
    }
}

{
    "name": "Marimo Development Container",
    "dockerFile": "Dockerfile",
    "forwardPorts": [2818],
    "postCreateCommand": "uv pip install --system -r requirements.txt",
    "postStartCommand": "uv run marimo --yes edit /workspaces/marimo_dev --host=localhost --port=2818 --headless --no-token",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "marimo.port": 2818,
                "marimo.host": "localhost",
                "marimo.enableToken": false,
                "marimo.showTerminal": false,
                "marimo.debug": false,
                "marimo.pythonPath": "/usr/local/bin/python",
                "marimo.marimoPath": "/usr/local/bin/marimo"
            },
            "extensions": [
                "ms-python.python",
                "marimo-team.vscode-marimo"
            ]
        }
    }
}

{
    "name": "Marimo Development Container",
    "dockerFile": "Dockerfile",
    "hostRequirements": {
        "cpus": 4
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },

    "remoteUser": "marimo",
    "updateRemoteUserUID": true,

    "forwardPorts": [8080],
    "postCreateCommand": "uv venv && uv pip install -r requirements.txt",
    "postStartCommand": "uv run marimo --yes edit /workspaces/marimo_dev --host=localhost --port=8080 --headless --no-token",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/workspaces/.venv/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
            },
            "extensions": [
                "ms-python.python",
                "marimo-team.vscode-marimo"
            ]
        }
    }
}
